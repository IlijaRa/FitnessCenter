@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Create a role";
}
<h1>Create a role</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="text-uppercase text-center">Create workout</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddRole" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create a role" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
       
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }  