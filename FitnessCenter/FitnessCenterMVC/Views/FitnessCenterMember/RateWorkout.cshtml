@model FitnessCenterMVC.Models.RateWorkoutViewModel
@{
}
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="text-uppercase text-center">Create workout</h5>
            </div>
            <div class="card-body">
                <form asp-action="RateWorkout" asp-controller="FitnessCenterMember" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    @Html.HiddenFor(m =>m.CoachId)

                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" readonly = "readonly"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type"></label>
                        <input asp-for="Type" class="form-control" readonly = "readonly"/>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkoutRate"></label>
                        <input asp-for="WorkoutRate" class="form-control" />
                        <span asp-validation-for="WorkoutRate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoachRate"></label>
                        <input asp-for="CoachRate" class="form-control" />
                        <span asp-validation-for="CoachRate" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Rate workout" class="btn btn-success text-uppercase rounded-0" />
                </form>
            </div>
        </div>
    </div>
</div>  